#!/usr/bin/env python3
"""
ROS2 Launch 文件 - SO-101 机械臂 URDF 可视化
启动 robot_state_publisher 和 RViz2
不强制依赖 joint_state_publisher_gui
"""
import os
from launch import LaunchDescription
from launch_ros.actions import Node


def generate_launch_description():
    # 获取当前文件所在目录
    pkg_path = os.path.dirname(os.path.abspath(__file__))
    
    # URDF 文件路径
    urdf_file = os.path.join(pkg_path, 'so101_new_calib.urdf')
    
    # RViz 配置文件路径
    rviz_config_file = os.path.join(pkg_path, 'so101.rviz')
    
    # 检查文件是否存在
    if not os.path.exists(urdf_file):
        raise FileNotFoundError(f"URDF 文件不存在: {urdf_file}")
    
    # 读取 URDF 文件内容
    with open(urdf_file, 'r') as infp:
        robot_desc = infp.read()
    
    print(f"✅ 已加载 URDF: {urdf_file}")
    print(f"✅ RViz 配置: {rviz_config_file}")
    print("⚠️  请在另一终端运行关节控制:")
    print("   cd sim && python3 joint_state_publisher.py")
    print("   或安装 GUI: sudo apt install ros-humble-joint-state-publisher-gui")
    
    # robot_state_publisher 节点
    robot_state_publisher_node = Node(
        package='robot_state_publisher',
        executable='robot_state_publisher',
        name='robot_state_publisher',
        output='screen',
        parameters=[{
            'robot_description': robot_desc,
            'use_sim_time': False
        }]
    )
    
    # RViz2 节点
    rviz_args = ['-d', rviz_config_file] if os.path.exists(rviz_config_file) else []
    rviz_node = Node(
        package='rviz2',
        executable='rviz2',
        name='rviz2',
        output='screen',
        arguments=rviz_args
    )
    
    return LaunchDescription([
        robot_state_publisher_node,
        rviz_node
    ])
